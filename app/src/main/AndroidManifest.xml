<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.neo.wicryptclone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WicryptClone">
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".ui.MainActivity"
            android:label="Settings"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ui.navactivities.AvailableTokensActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.navactivities.WithDrawalsActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.navactivities.MyDevicesActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.navactivities.ReferralsActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.navactivities.TransactionsActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.RouterLoginActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.ShareWCActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.FundWalletActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.WelcomeActivity"
            android:theme="@style/welcomeActivityTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ui.LaunchActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.WicryptClone.NoActionBar">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>